@model TourAgency.Models.Messages.Message

<!DOCTYPE html>

<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Log In</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.0/css/bootstrap.min.css">
</head>
<body>
<div class="container" style="width: 50vh">
    <div class="row align-items-center" style="height: 100vh">
        <div class="col">
            <h1 align="center">Login</h1>
            <p>@User.Identity.Name</p>
            @using (Html.BeginForm("authentication", "Login", FormMethod.Post)) {
            switch (Model?.type) {
                case "success":
                    <div class="alert alert-success" role="alert">
                        @Model.message
                    </div>
                    break;
                case "error":
                    <div class="alert alert-danger" role="alert">
                        @Model.message
                    </div>
                    break;
            }
            <div class="input-group mb-2">
                <div class="input-group-prepend">
                    <span class="input-group-text">Email</span>
                </div>
                <input class="form-control" type="text" name="email">
            </div>
            <div class="input-group mb-2">
                <div class="input-group-prepend">
                    <span class="input-group-text">Password</span>
                </div>
                <input class="form-control" type="password" name="password">
            </div>
            <div align="center">
                <input style="margin: 5px 5px 5px" type="submit" class="btn btn-info" value="Sign In"/>
                <input style="margin: 5px 5px 5px" type="button" class="btn btn-info" value="Sign Up"
                       onClick='location.href = "/registration"'/>
            </div>
            }
        </div>
    </div>
</div>
</body>
</html>